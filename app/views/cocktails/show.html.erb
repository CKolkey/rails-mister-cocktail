<div class="d-flex">
  <div class="w-50">
    <h1 class="mb-3">
      <%= link_to "<", cocktails_path %>
      <%= @cocktail.name %>
    </h1>
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> | <%= dose.ingredient.name %>
      <%= link_to ' Delete', dose_path(dose), method: :delete %> </li>
      <% end %>
    </ul>
  </div>

  <div class="w-50 mt-5">
    <h6>ADD INGREDIENTS</h6>
    <%= render 'doses/form' %>
  </div>
</div>
